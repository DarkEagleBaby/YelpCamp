<% layout('/layouts/boilerplate.ejs') %>

    <h1 class="text-center">All campgrounds</h1>

    <ul>
        <% for(let campground of campgrounds){ %>
            <div class="card">
                <div class="row">
                    <div class="col-md-4">
                        <img class="img-fluid" src="<%= campground.image %>" alt="">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= campground.title %>
                                <p class="card-text"><%= campground.description %></p>
                                <p class="card-text">
                                    <small class="text-secondary"><%= campground.location %></small>
                                </p>
                                <a href="/campgrounds/<%= campground.id %>" class="btn btn-primary">view campground</a>
                            </h5>
                        </div>
                    </div>
                </div>

            </div>

            <% } %>

    </ul>

